
@{
    ViewBag.Title = "Search Results";
}
<h2>@ViewBag.Title</h2>

@if (Model.Count == 0)
{
    <p>No results found</p>
}
else
{
    foreach (var album in Model)
    {
        string albumImage = album.AlbumId + ".jpg";

        <div class="row searchResult">
            <div class="col-md-2">
                <img src="~/Images/@albumImage" />
            </div>
            <div class="col-md-10">
                <h2>@album.Title</h2>
                <p>@album.Artist  (@album.Year)</p>
            </div>
        </div>

    }
}




